@model IEnumerable<ManagementSystem.Models.Car>

@{
    ViewData["Title"] = "Index";
}
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.2.6/css/responsive.dataTables.min.css" rel="stylesheet" />
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="CarOwner" class="table table-striped table-bordered table-hover display nowrap" style="width:100%">
    <thead>        
        <tr>
            <th class="align-middle table-success">
                Chủ xe
            </th>
            <th class="align-middle table-success">
                @Html.DisplayNameFor(model => model.PIDInfor.PeopleDateOfBirth)
            </th>

            <th class="align-middle table-success">
                @Html.DisplayNameFor(model => model.PIDInfor.PeoplePIDNumber)
            </th>
            <th class="align-middle table-success">
                @Html.DisplayNameFor(model => model.PIDInfor.PeopleAddress)
            </th>

            <th class="align-middle table-success">
                @Html.DisplayNameFor(model => model.CarPlate)
            </th>
            <th class="align-middle table-success">
                @Html.DisplayNameFor(model => model.CarModel.CarModelVendor)
            </th>
            <th class="align-middle table-success">
                @Html.DisplayNameFor(model => model.CarModel.CarModelModel)
            </th>
            <th class="align-middle table-success">
                @Html.DisplayNameFor(model => model.CarModel.CarModelNumberOfSeat)
            </th>

            <th class="align-middle table-success">
                @Html.DisplayNameFor(model => model.CarEngieNumber)
            </th>
            <th class="align-middle table-success">
                @Html.DisplayNameFor(model => model.CarEngieChassisNumber)
            </th>
            <th class="align-middle table-success">
                @Html.DisplayNameFor(model => model.CarManufactureYear)
            </th>
            <th class="align-middle table-success">
                @Html.DisplayNameFor(model => model.CarManufactureCountry)
            </th>
            <th class="align-middle table-success">
                @Html.DisplayNameFor(model => model.LCompany.LocationCompanyWeb)
            </th>
            <th class="align-middle table-success">
                @Html.DisplayNameFor(model => model.LocationUser)
            </th>
            <th class="align-middle table-success">
                @Html.DisplayNameFor(model => model.LocationPass)
            </th>
            <th class="align-middle table-success">
                @Html.DisplayNameFor(model => model.LocationValidUntil)
            </th>

            <th class="align-middle table-success">
                @Html.DisplayNameFor(model => model.CarOwnerNote)
            </th>

            <th class="align-middle table-success"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.PIDInfor.PeopleName)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(model => item.PIDInfor.PeopleDateOfBirth)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(model => item.PIDInfor.PeoplePIDNumber)
            </td>

            <td class="align-middle">
                @Html.DisplayFor(model => item.PIDInfor.PeopleAddress)
            </td>

            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.CarPlate)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.CarModel.CarModelVendor)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.CarModel.CarModelModel)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.CarModel.CarModelNumberOfSeat)
            </td>


            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.CarEngieNumber)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.CarEngieChassisNumber)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.CarManufactureYear)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.CarManufactureCountry)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.LCompany.LocationCompanyWeb)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.LocationUser)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.LocationPass)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.LocationValidUntil)
            </td>

            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.CarOwnerNote)
            </td>

            <td class="align-middle">
                <a asp-action="Edit" asp-route-id="@item.CarID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CarID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CarID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
@section scripts
    {

    <script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.22/js/dataTables.jqueryui.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.6/js/dataTables.responsive.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#CarOwner').DataTable
                ({
                    scrollX: true
                });
        }
        );
    </script>
}

