                <div class="card-body">
                    <div class="tab-content">
                        <div class="active tab-pane" id="carRegistration">
                            Thông tin đăng ký xe
                            <div class="timeline timeline-inverse">
                                @if (Model.CarRegistrations != null)
                                {
                                    foreach (CarRegistration carReg in Model.CarRegistrations)
                                    {
                                        <div class="time-label">
                                            <span class="bg primary">
                                                @carReg.CarDateRegistration.Value.ToString("dd/MM/yyyy")
                                            </span>
                                        </div>
                                        <div>
                                            <i class="fas fa-envelope bg-primary"></i>
                                            <div class="timeline-item">
                                                <h3 class="timeline-header">@carReg.PIDInfor.PeopleName</h3>
                                                @carReg.CarRegistrationNote
                                                <img id="blah" src="@("~/img/Cars/"+Model.CarPlate+"/"+ carReg.CarRegistrationImageUrl)" asp-append-version="true" width="100%" height="auto" />
                                            </div>

                                        </div>
                                        <div>

                                        </div>
                                    }
                                }
                                <div class="time-label">
                                    <span class="bg primary">
                                        Add more 
                                    </span>
                                </div>
                                <div class="timeline-item">
                                    <div class="timeline-footer">
                                        <a href="#" class="btn btn-primary btn-sm">Read more</a>
                                        <a href="#" class="btn btn-danger btn-sm">Delete</a>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="tab-pane" id="carInspection">
                            Thông tin quá trình đăng kiểm xe
                            <div class="timeline timeline-inverse">
                                @if (Model.CarInspections != null)
                                {
                                    foreach (CarInspection carInspec in Model.CarInspections)
                                    {
                                        <div class="time-label">
                                            <span class="bg primary">
                                                @carInspec.InspectionDate.Value.ToString("dd/MM/yyyy")
                                            </span>

                                        </div>
                                        <div>
                                            <i class="fas fa-envelope bg-primary"></i>
                                            <div class="timeline-item">
                                                <span class="time"><i class="far fa-clock"></i> Ngày hết hạn: @carInspec.CarInspectionValidUntil.Value.ToString("dd/MM/yyyy")</span>
                                                <img id="blah" src="@("~/img/Cars/"+Model.CarPlate+"/"+ carInspec.CarInspectionImagePath)" asp-append-version="true" width="100%" height="auto" />
                                            </div>
                                        </div>
                                    }
                                }

                            </div>
                        </div>
                        <div class="tab-pane" id="carInsurance">
                            Thông tin bảo hiểm xe
                            <div class="timeline timeline-inverse">
                                @if (Model.CarInsurances != null)
                                {
                                    foreach (CarInsurance carIns in Model.CarInsurances)
                                    {
                                        <div class="time-label">
                                            <span class="bg primary">
                                                @carIns.CarInsuranceDate.Value.ToString("dd/MM/yyyy")
                                            </span>
                                        </div>
                                        <div>
                                            <i class="fas fa-envelope bg-primary"></i>
                                            <div class="timeline-item">
                                                @*<h3 class="timeline-header">@carIns.CarInsuranceDate.Value.ToString("dd/MM/yyyy")</h3>*@
                                                <span class="time"><i class="far fa-clock"></i> Ngày hết hạn: @carIns.CarInsuranceValidUntil.Value.ToString("dd/MM/yyyy")</span>
                                                <img id="blah" src="@("~/img/Cars/"+Model.CarPlate+"/"+ carIns.CarInsuranceImagePath)" asp-append-version="true" width="100%" height="auto" />
                                            </div>
                                        </div>


                                    }
                                }
                            </div>
                        </div>
