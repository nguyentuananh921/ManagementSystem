@model IEnumerable<ManagementSystem.Models.CarModel>

@{
    ViewData["Title"] = "Index";
}
<h1>Danh sách loại xe</h1>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Danh sách loại xe</title>
</head>
<body>
    <p>
        <a asp-action="Create">Tạo mới</a>
    </p>

    <table id="carModelTable" class="table table-striped table-bordered table-hover display nowrap" style="width:100%">
        <thead>
            <tr>
                <th class="align-middle table-success">

                </th>
                <th class="align-middle table-success">
                    @Html.DisplayNameFor(model => model.CarModelVendor)
                </th>
                <th class="align-middle table-success">
                    @Html.DisplayNameFor(model => model.CarModelModel)
                </th>
                <th class="align-middle table-success">
                    @Html.DisplayNameFor(model => model.CarModelNumberOfSeat)
                </th>
                <th class="align-middle table-success"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@("~/img/CarModels/"+ item.CarModelImageUrl)" class="rounded w-auto" height="40" alt="..." asp-append-version="true">

                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.CarModelVendor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarModelModel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarModelNumberOfSeat)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CarModelID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.CarModelID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.CarModelID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>



    <p>
        <a asp-action="Create">Tạo mới</a>
    </p>



    @section scripts
    {      

        <script>
            $(document).ready(function () {
                $('#carModelTable').DataTable
                    ({
                        scrollX: true
                    });
            }
            );
        </script>
    }


</body>
</html>
